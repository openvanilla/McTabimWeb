{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es6", "dom"],
    "outDir": "dist",
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "allowJs": true,
    "typeRoots": ["node_modules/@types"],
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "output",
    "coverage",
    "others",
    "**/*.test.ts",
    "**/*.spec.ts",
    "src/chromeos_ime.ts",
    "src/pime.ts",
    "src/pime_keys.ts"
  ]
}
